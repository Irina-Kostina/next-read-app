# HTTP
PORT=3000
NODE_ENV=development

# SQLite file path (created automatically)
DB_FILE=./server/db/app.sqlite3

# Auth0 (create an API in Auth0 dashboard; set the audience to the API identifier)
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_AUDIENCE=http://localhost:3000

# Optional: bypass auth for local testing (treat you as a fixed user)
DEV_BYPASS_AUTH=1
DEV_USER_ID=dev-user-123
